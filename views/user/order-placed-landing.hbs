<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Helvetica Neue', sans-serif;
        background-color: #f9f9f9;
    }

    .thank-you-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
    }

    .thank-you-header {
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 40px;
        color: #2c3e50;
    }

    .thank-you-content {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 40px;
        margin-bottom: 60px;
    }

    .thank-you-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #2c3e50;
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        padding: 15px 30px;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .thank-you-btn:hover {
        transform: scale(1.05);
    }

    .thank-you-btn:active {
        transform: scale(0.95);
    }

    .thank-you-btn span {
        margin-left: 10px;
        position: relative;
        z-index: 1;
    }

    .thank-you-btn i {
        font-size: 24px;
        margin-right: 10px;
        position: relative;
        z-index: 0;
        transition: all 0.3s ease;
    }

    .thank-you-btn:hover i,
    .thank-you-btn:hover span {
        color: #fff;
    }

    .thank-you-btn:hover {
        background-color: #2c3e50;
    }

    .thank-you-orders-btn {
        background-color: #27ae60;
    }

    .thank-you-orders-btn:hover {
        background-color: #219e54;
    }

    .thank-you-continue-btn {
        background-color: #3498db;
    }

    .thank-you-continue-btn:hover {
        background-color: #2980b9;
    }

    @keyframes zoom {
        0% {
            transform: scale(1);
        }

        100% {
            transform: scale(1.1);
        }
    }

    .thank-you-btn i {
        font-size: 24px;
        margin-right: 10px;
        position: relative;
        z-index: 0;
        animation: zoomInOut 2s ease-in-out infinite;
    }

    @keyframes zoomInOut {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.3);
        }

        100% {
            transform: scale(1);
        }
    }

    /* Customize the tooltip */
    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
    }

    /* Tooltip text */
    .tooltip .tooltiptext {
        visibility: hidden;
        width: 120px;
        background-color: #555;
        color: #fff;
        text-align: center;
        border-radius: 6px;
        padding: 5px 0;
        /* Position the tooltip text */
        position: absolute;
        z-index: 1;
        bottom: 125%;
        left: 50%;
        margin-left: -60px;
        /* Fade in tooltip */
        opacity: 0;
        transition: opacity 0.3s;
    }

    /* Show the tooltip text when you mouse over the tooltip */
    .tooltip:hover .tooltiptext {
        visibility: visible;
        opacity: 1;
    }
</style>
